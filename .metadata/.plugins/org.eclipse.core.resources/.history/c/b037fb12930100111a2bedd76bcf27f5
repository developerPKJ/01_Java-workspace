//패키지 선언부 - 이 클래스를 생성할 때 선택한 패키지의 위치를 나타내는 구문
package com.kh.first;

import java.util.Scanner;

public class HelloEveryone {

	/* 
	 * 사칙연산
	 * 코드
	 */
	
	/*
	 * 자바 프로그래밍 순서
	 * 1. workspace 생성
	 * 2. project 생성
	 * 3. package 생성
	 * 4. class 생성
	 * 5. 코드 작성
	 */
	
	/*
	 * 패키지 내에 들어가는 클래스 이름 간의 중복은 기존의 폴더 규칙과 동일함
	 * 기본 패키지(src)에 클래스를 바로 넣는 것은 권장하지 않음 --> 추후 확장성과 유지보수성
	 */
	
	/*
	 * 패키지명은 모두 소문자
	 * 패키지는 적어도 세 단계 이상으로 만들기
	 * 패키지명의 두 번째 레벨까지는 도메인 주소의 역순으로
	 */
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println("Hello, Everyone!");
		System.out.println("아무 수식 입력");
		
		Scanner scan = new Scanner(System.in);
		String a = scan.next();
		String b = scan.next();
		String c = scan.next();
		
		int type;			//스위치 변수
		if (b.equals("+")) {
			type = 0;
		}else if (b.equals("+")) {
			type = 1;
		}else if (b.equals("+")) {
			type = 2;
		}else if (b.equals("+")) {
			type = 3;
		}else {
			throw new IllegalArgumentException("Unexpected value: " + b);			
		}
			
		
		switch (type) {
			case 0 ->
				System.out.println(Integer.parseInt(a) + Integer.parseInt(c));
			case 1 ->
				System.out.println(Integer.parseInt(a) - Integer.parseInt(c));

			case 2 ->
				System.out.println(Integer.parseInt(a) * Integer.parseInt(c));
		
			default ->
				System.out.println(Integer.parseInt(a) / Integer.parseInt(c));		
		}
		
		scan.close();
	}

}
